<section>
    <div>
        <img src="/images/HALbanner.png" alt="HALbannerImg">
    </div>
    <div class="sectionFlexContainer">
        
    </div>
    <div>
        <form class="registerForm" method='POST'>
            <div>
            <p class="register">Please fill in the following form to be able to register as a supporter for this important petition:</p>
        </div>
            <div style="text-align:center;">
                {{#if error}}
                    <span id="error">Uh oh, something went wrong. Please try again!</span>
                {{/if}}
                {{#if emptyValues}}
                    <span id="error">Please fill in all the required fields.</span>
                {{/if}}
                {{#if emptyValue}}
                    <span id="error">Ops, it looks like the "{{emptyValue}}" field has been left empty!</br>Please fill in all the required fields.</span>
                {{/if}}
                {{#if accountAlreadyRegistrated}}
                    <span id="error">Mmh, it looks like an account is already registered with this email.</span>
                {{/if}}
            </div>
            <div id="inputNamesContainer">
                <input type='text' name='first' placeholder='First Name..' autocomplete='off'>
                <input type='text' name='last' placeholder='Last Name..' autocomplete='off'>
                <input type='email' name='email' placeholder='Email Address..' autocomplete='off'>
                <input type='password' name='password' placeholder='Password..' autocomplete='off'>
                <input type="hidden" name="_csrf" value="{{csrfToken}}">
            </div>
            <div>
                <button class="button"> SIGN UP </submit>
            </div>
            
            <div>
                <span id="ifMemberLogin">If you are already a member, please <a href="/login">log in</a>.</span>
            </div>   
            <div>
                <span id="ifMemberLogin">If you wanna read more about the petition, you can click <a href="/home#moreAboutSingularity">here</a>.</span>
            </div>   
        </form>
    </div>
</section>